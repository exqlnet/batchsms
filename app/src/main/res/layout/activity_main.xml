<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ListView
            android:layout_width="381dp"
            android:layout_height="443dp" tools:layout_editor_absoluteY="16dp" tools:layout_editor_absoluteX="8dp"/>

	<LinearLayout
		android:layout_width="382dp"
		android:layout_height="249dp"
		android:orientation="vertical"
		tools:layout_editor_absoluteX="8dp"
		tools:layout_editor_absoluteY="466dp">
		<Button
			android:id="@+id/buttonImport"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="导入"
			tools:layout_editor_absoluteX="258dp"
			tools:layout_editor_absoluteY="594dp"
			tools:visibility="visible" />

		<TextView
			android:id="@+id/textView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="发送间隔(秒)"
			tools:layout_editor_absoluteX="262dp"
			tools:layout_editor_absoluteY="505dp" />

		<EditText
			android:id="@+id/editInterval"
			android:layout_width="234dp"
			android:layout_height="38dp"
			android:ems="10"
			android:inputType="number"
			tools:layout_editor_absoluteX="258dp"
			tools:layout_editor_absoluteY="541dp" />

		<TextView
			android:id="@+id/TextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="请输入接收短信的号码"
			tools:layout_editor_absoluteX="262dp"
			tools:layout_editor_absoluteY="505dp" />

		<EditText
			android:id="@+id/editText"
			android:layout_width="234dp"
			android:layout_height="38dp"
			android:ems="10"
			android:inputType="phone"
			tools:layout_editor_absoluteX="258dp"
			tools:layout_editor_absoluteY="541dp" />

		<Button
			android:id="@+id/button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="发送"
			tools:layout_editor_absoluteX="258dp"
			tools:layout_editor_absoluteY="594dp"
			tools:visibility="visible" />
	</LinearLayout>
</android.support.constraint.ConstraintLayout>